/* pages/product/detail/detail.wxss */
.headline-container{
    position: relative;
    padding: 48rpx 0 62rpx 48rpx;
    background: #fff;
    border-bottom: 1px solid #e7e7e7;
}
.headline{
  -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    display: -webkit-box;
    overflow: hidden;
    padding-right: 48rpx;
    color: #111;
    font-size: 38rpx;
    line-height: 56rpx;
    margin-bottom: 12rpx;
}
.discount-price{
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    display: -webkit-box;
    overflow: hidden;
    padding-right: 30rpx;
    margin-bottom: 24rpx;
    font-size:30rpx;
    line-height: 42rpx;
    color: #959595;
}
.price-container{
  font-size: 48rpx;
    line-height: 54rpx;
    color: #e23737;
    display: inline-block;
    margin-right: 16rpx;
    vertical-align: middle;
}
.shipping-rate{
  margin-bottom: 24rpx;
    font-size: 24rpx;
    color: #ccc;
    line-height: 32rpx;
}
.is-in-detail .arrow-icon {
    position: absolute;
    right:4rpx;
    top: 50%;
    -webkit-transform: translateY(-50%);
    transform: translateY(-50%);
}
.guarantee-list .arrow-icon {
    margin: 0;
}
.guarantee-list .arrow-icon .icon{
    color: #959595;
}

.ifanrin-arrow-r:before {
    content: "\E60F";
}





/* 底部 */
.bar.bar-footer{
    overflow: visible;
}

.bar.bar-footer {
    bottom: 0;
    z-index: 8;
}
.bar {
    background-color: #fff;
    height: 88rpx;
    left: 0;
    overflow: hidden;
    position: fixed;
    right: 0;
    z-index: 10;
}
.product-toolbar {
    height: 88rpx;
    font-size: 0;
    text-align: center;
}
.product-toolbar .button-group--left {
    float: left;
    margin-right: 0;
    padding-top: 14rpx;
    border-radius: 0;
    width: 40%;
    height: 88rpx;
    background-color: #111;
    box-sizing: border-box;
}
.product-toolbar .button-vertical {
    display: inline-block;
    width: 33.333%;
    color: #fff;
}
.product-toolbar .button-icon{
    position: relative;
    display: inline-block;
    margin-bottom: 4rpx;
    font-size: 34rpx;
    line-height: 34rpx;
}
.product-toolbar .button-text{
    display: block;
    font-size:20rpx;
    line-height: 20rpx;
}
.icon-service:before {
    content: "\E606";
}
.icon-shopping-cart-linetype:before {
    content: "\E607";
}

.coolbuy-icon {
    font-family: coolbuy!important;
    font-size: 32rpx;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}
.icon-home-linetype:before {
    content: "\E60A";
}
.product-toolbar .button-group--right {
    float: left;
    width: 60%;
    border-left: 1rpx solid #ccc;
    box-sizing: border-box;
}
.product-toolbar .button-buy, .product-toolbar .button-cart {
    padding: 0;
    width: 50%;
    height: 88rpx;
    line-height: 88rpx;
    border: none;
    font-size: 32rpx;
    color: #fff;
    background-color: #111;
    border-radius: 0;
}
