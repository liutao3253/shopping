/* 搜索框 */
.header{
    width: 100%;
    height: 100rpx;
    background: #fff;
}
.search-bar-container{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: .32rem;
    padding: .12rem;
    z-index: 20;
    background-color: #fff;
}



/* 内容区 */
.content{
    border-top: 1px solid #ccc;
    background: #fff;
    position: fixed;
    top: 102rpx;
    left: 0;
    right: 0;
    bottom: 0rpx;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
}


/* 左侧栏 */
.product_tab{
  width:20%;
  position: relative;
  height: 100%;
  border-right: 1px solid #ccc;
  overflow-x: hidden;
  box-sizing: border-box;
  padding-top: 30rpx;
}
.product_item{
  width: 100%; 
}
.swiper-tab-list{
  font-size: 28rpx;
  color: #111;
  margin-bottom: 48rpx;
  text-align: center;
}
.on{
    font-weight: 700;
    box-sizing: border-box;
    border-left: 6rpx solid #e60012;
}

/* 右侧 */
.product_detail{
  width:76%;
  float:right;
  overflow-y: scroll;
  margin: 0 auto;
  padding-top: 30rpx;
}
.product_list{
  width: 100%; 
  padding: 0 20rpx;
  box-sizing: border-box;
  display: none;
}
.show{
  display: block;
}
.product_banner{
  width: 100%;
  background-size: cover;
  background-position: center;
  height: 240rpx;
}
.product_text{
   width:100%;
   text-align: center;
   display: flex;  
   flex-wrap:wrap; 
}
.product-price{
  width: 144rpx;
  height: 144rpx;
  background-color: hsla(233,7%,56%,.1);
  background-position: 50%;
  background-repeat: no-repeat;
  background-size: cover;
}
.product-price image{
  width: 100%;
  height: 100%;
}
.product-title{
    width: 100%;
    height: 30rpx;
    line-height: 30rpx;
    font-size: 24rpx;
    color: #707070;
}
navigator{
  margin:0 46rpx 34rpx 0;
}

navigator:nth-child(3n) {
    margin-right: 0;
}