/* pages/home/home.wxss */
/* tab页 */
.swiper-tab{  
  width: 100%;  
  text-align: center;  
  line-height: 80rpx;
}  
.swiper-tab-list{  
  font-size: 30rpx;  
  display: inline-block;  
  width: 33.33%;  
  color: #777777;  
}  
.on{ 
  color: #F27171;  
  border-bottom: 5rpx solid #F27171;
}  
  
  /* banner */
.banner-swiper{
   height: 230px; 
  width: 100%; 
  overflow: hidden;
}
.swiper-item{ 
  height:100%; 
  width: 100%; 
} 
.swiper-item navigator{
  width: 100%;
  height: 100%;
}   
.swiper-item .slide-image{  
  width: 110%;
  height: 100%;
}   


/* 选项卡 */
.home_items{
  display: flex;  
  flex-wrap:wrap; 
  flex-direction:row; 
  flex-grow:3;
  margin: 10rpx 0;
}
.home_list{ 
  width: 25%;
  text-align: center;
  font-size: 10px;
  color: #888;
}
.home_list .img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
   overflow: hidden; 
  margin: 0 auto;
  margin-top:10rpx ;
}
.home_list .img wx-image{
  width: 100%;
  height: 100%;
}

/* 新品上架 */
.shelf-header{
  display: flex;
  justify-content: space-between;
}
.shelf-more{
  align-self: center;
}